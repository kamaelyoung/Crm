<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   namespace="Crm.Data" assembly="Crm.Data">
    <class name="ActivityModel" table="crm_activity">
        <id name="ID" type="string" column="activity_id">
            <generator class="uuid.hex">
            </generator>
        </id>
        <property name="Subject" type="String" column="activity_subject"></property>
        <property name="ContactId" type="string" column="contact_id"></property>
        <property name="CreatorId" type="String" column="activity_creatorId"></property>
        <property name="CreateTime" type="DateTime" column="activity_createTime"></property>
        <property name="ModifiedUserId" type="String" column="activity_modifiedUserId"></property>
        <property name="ModifiedTime" type="DateTime" column="activity_modifiedTime"></property>
        <property name="MetadataId" type="int" column="metadata_id"></property>
    </class>
</hibernate-mapping>