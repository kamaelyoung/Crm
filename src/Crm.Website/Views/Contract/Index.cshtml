@using Crm.Website;
@using Crm.Website.Models;
@using Crm.Api;
@{
    ViewBag.Title = "合同管理";
    Layout = "~/Views/Contract/Layout.cshtml";
    this.ViewBag.LeftMenu = "Index";
}
<script type="text/javascript" src='@this.Url.Content("~/js/contractSearchPopover.js")'></script>
<div class="row-fluid">
    <div class="span2">
        <p class="lead">合同管理</p>
    </div>
    <div class="span10">
        <a id="btnCreate" href="@this.Url.Action("Create")" class="btn"><i class="icon-plus"></i>创建</a>
        <button id="btnSearch" class="btn"><i class="icon-search"></i>查询</button>
        <button id="btnDelete" disabled="disabled" data-loading-text="删除中..." class="btn"><i class="icon-trash"></i>删除</button>  
        <button id="btnRefresh" class="btn"><i class="icon-refresh"></i>刷新</button> 
        <a id="btnViewSteup" href="@string.Format("{0}?viewType={1}&returnUrl={2}", this.Url.Action("ViewSetup"), GridViewType.ContractManage, this.Request.Url)" class="btn"><i class="icon-th"></i>视图设置</a> 
        <button id="btnExport" class="btn" data-loading-text="导出中..."><i class="icon-download"></i>导出Excel</button> 
    </div>
</div>

<div id="contractGrid">
                
</div>
        
<div id="pager" class="pull-right" style="height: 30px">
            
</div>
<div id="searchPopover">@{this.Html.RenderPartial("SearchPopover");}</div>
<script type="text/javascript" language="javascript">
    var keyword = "@this.Html.Raw(this.Request["keyword"])";
    var contractGrid = $("#contractGrid").datagrid({
		columns: @this.Html.Raw(this.ViewBag.columnsJson),
        height: "auto",
		canSort: false,
		singleSelect: false,
		showNumberRow: true,
        selectedRow: function(){
            $("#btnDelete").prop("disabled", false);
        },
        unselectedRow: function(){
            var rows = contractGrid.datagrid("getSelectedRows");
            $("#btnDelete").prop("disabled", rows.length == 0);
        }
	});

    var pager = $("#pager").pager({change: function(event, args){
        loadContractGrid(_searchInfo, args.start);
    }});

    var _searchInfo;
    function loadContractGrid(searchInfo, start, cb){
        _searchInfo = searchInfo;
        var args = {start: start, size: 20};
        if(_searchInfo){
            $.extend(args, _searchInfo);
        }
        $.get("@this.Url.Action("Contracts")", {json: $.toJSON(args)}, function(model){
            if(cb){
                cb();
            }
            if(model.result == 0){
                $("#contractGrid").datagrid("option", "data", model.data.list);
                $("#pager").pager("option", "pageInfo", {start: start, size: 20, count: model.data.count})
                $("#btnDelete").prop("disabled", true);
            }
            else{
                alert(model.message)
            }
        });
    }
    if(keyword){
        loadContractGrid({keyword: keyword}, 0);
    }
    else{
        loadContractGrid(null, 0);
    }

    $("#btnKeywordSearch").click(function(){
        var btn = $(this).button("loading");
        var formValue = $(".navbar-form").getFormValue();
        loadContractGrid(formValue, 0, function(){
            btn.button("reset");
        });
        return false;
    });

    $("#btnRefresh").click(function(){
        var pageInfo = pager.pager("option").pageInfo;
        $("#btnRefresh").button("loading");
        loadContractGrid(_searchInfo, pageInfo.start, function(){
            $("#btnRefresh").button("reset");
        });
        return false;
    });

    $("#btnDelete").click(function(){
        if(!confirm("确实要删除吗?"))
        {
            return false;
        }
        var row = $("#contractGrid").datagrid("getSelectedRow");
        var contractId = row.datarow("option", "data").id;
        $("#btnDelete").button("loading");
        $.post("@this.Url.Action("Delete")", {contractId: contractId}, function(model){
            $("#btnDelete").button("reset");
            if(model.result == 0){
                var pageInfo = pager.pager("option").pageInfo;
                loadContractGrid(_searchInfo, pageInfo.start);
            }
            else{
                alert(model.message)
            }
        });
        return false;
    });
    var searchPopover = $("#searchPopover").contractSearchPopover();
    var btnSearch = $("#btnSearch").click(function(event){
        searchPopover.contractSearchPopover("search", btnSearch, function(searchInfo){
            loadContractGrid(searchInfo, 0);
        });
        event.stopPropagation();
        return false;
    });

    $("#btnExport").click(function(){
        $("#btnExport").button("loading");
        var json =  "";
        if(_searchInfo){
            json =  $.toJSON(args);
        }
        $.get("@this.Url.Action("Export")", {json: json}, function(model){
            $("#btnExport").button("reset");
            if(model.result == 0){
                open("@this.Url.Action("DownloadExportFile")" + "?fileName=" + model.data);
            }
            else{
                alert(model.message)
            }
        });
        return false;
    });
</script>