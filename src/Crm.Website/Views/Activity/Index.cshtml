@using Crm.Website;
@using Crm.Website.Models;
@using Crm.Api;
@{
    ViewBag.Title = "客户接触管理";
    Layout = "~/Views/Activity/Layout.cshtml";
    this.ViewBag.LeftMenu = "Index";
}
<div class="row-fluid">
    <div class="span2">
        <p class="lead">客户接触管理</p>
    </div>
    <div class="span10">
        <a id="btnCreate" href="@this.Url.Action("Create")" class="btn"><i class="icon-plus"></i>创建</a>
        <button id="btnDelete" disabled="disabled" data-loading-text="删除中..." class="btn"><i class="icon-trash"></i>删除</button>  
        <button id="btnRefresh" class="btn"><i class="icon-refresh"></i>刷新</button> 
        <a id="btnViewSteup" href="@string.Format("{0}?viewType={1}&returnUrl={2}", this.Url.Action("ViewSetup"), GridViewType.ActivityManage, this.Request.Url)" class="btn"><i class="icon-th"></i>视图设置</a> 
    </div>
</div>

<div id="activityGrid">
                
</div>
        
<div id="pager" class="pull-right" style="height: 30px">
            
</div>
<script type="text/javascript" language="javascript">
    var keyword = "@this.Html.Raw(this.Request["keyword"])";
    var activityGrid = $("#activityGrid").datagrid({
		columns: @this.Html.Raw(this.ViewBag.columnsJson),
        height: "auto",
		canSort: false,
		singleSelect: false,
		showNumberRow: true,
        selectedRow: function(){
            $("#btnDelete").prop("disabled", false);
        },
        unselectedRow: function(){
            var rows = activityGrid.datagrid("getSelectedRows");
            $("#btnDelete").prop("disabled", rows.length == 0);
        }
	});

    var pager = $("#pager").pager({change: function(event, args){
        loadActvityGrid(_sousuoXinxi, args.start);
    }});

    var _sousuoXinxi;
    function loadActvityGrid(sousuoXinxi, start, cb){
        _sousuoXinxi = sousuoXinxi;
        var args = {start: start, size: 20};
        if(_sousuoXinxi){
            $.extend(args, _sousuoXinxi);
        }
        $.get("@this.Url.Action("Activitys")", args, function(model){
            if(cb){
                cb();
            }
            if(model.result == 0){
                $("#activityGrid").datagrid("option", "data", model.data.list);
                $("#pager").pager("option", "pageInfo", {start: start, size: 20, count: model.data.count})
                $("#btnDelete").prop("disabled", true);
            }
            else{
                alert(model.message)
            }
        });
    }
    if(keyword){
        loadActvityGrid({keyword: keyword}, 0);
    }
    else{
        loadActvityGrid(null, 0);
    }

    $("#btnKeywordSearch").click(function(){
        var btn = $(this).button("loading");
        var formValue = $(".navbar-form").getFormValue();
        loadActvityGrid(formValue, 0, function(){
            btn.button("reset");
        });
        return false;
    });

    $("#btnRefresh").click(function(){
        var pageInfo = pager.pager("option").pageInfo;
        $("#btnRefresh").button("loading");
        loadActvityGrid(_sousuoXinxi, pageInfo.start, function(){
            $("#btnRefresh").button("reset");
        });
        return false;
    });

    $("#btnDelete").click(function(){
        if(!confirm("确实要删除吗?"))
        {
            return false;
        }
        var row = $("#activityGrid").datagrid("getSelectedRow");
        var activityId = row.datarow("option", "data").id;
        $("#btnDelete").button("loading");
        $.post("@this.Url.Action("Delete")", {activityId: activityId}, function(model){
            $("#btnDelete").button("reset");
            if(model.result == 0){
                var pageInfo = pager.pager("option").pageInfo;
                loadActvityGrid(_sousuoXinxi, pageInfo.start);
            }
            else{
                alert(model.message)
            }
        });
        return false;
    });
</script>